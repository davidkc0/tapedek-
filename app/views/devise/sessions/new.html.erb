

<h2>Sign in</h2>

<div class="row text-center">
  <div class="col-md-12 center-block">
    <div class="social-sign-in">
      <%= link_to '/auth/google_oauth2', class: "btn" do %>
        <i class="fa fa-google"></i>
        <div class="text-center">Sign in with Google+</div>
      <% end %>
    </div>

    <div class="social-sign-in">
      <%= link_to '/auth/facebook', class: "btn" do %>
        <i class="fa fa-facebook"></i>
        <div class="text-center">Sign in with Facebook</div>
      <% end %>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <!-- Email -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Username or email" %>
        </div>
      </div>
    </div>
    <!-- Password -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password #{ @validatable ? '(' + @minimum_password_length.to_s + ' characters minimum)' : ''}" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-6 col-md-offset-3"> 
        <%= f.submit "Sign in", class: "btn btn-primary pull-right" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
<% end %>


