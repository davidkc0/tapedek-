

<h2>Sign in</h2>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="row text-center">
  <div class="center-block">
    <div class="social-sign-in col-md-6 text-center">
      <%= link_to '/auth/google_oauth2', class: "btn-auth btn-google" do %>
        Sign in with Google+
      <% end %>
    </div>

    <div class="social-sign-in col-md-6 text-center">
      <%= link_to '/auth/facebook', class: "btn-auth btn-facebook" do %>
        <i class="fa fa-facebook"></i>
        Sign in with Facebook
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
<br><div class="text-center">OR</div><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <!-- Email -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Username or email" %>
        </div>
      </div>
    </div>
    <!-- Password -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password #{ @validatable ? '(' + @minimum_password_length.to_s + ' characters minimum)' : ''}" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-6 col-md-offset-3"> 
        <%= f.submit "Sign in", class: "btn btn-primary pull-right" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
<% end %>


