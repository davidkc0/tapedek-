<h2>sign up</h2>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="row text-center">
  <div class="center-block">
    <div class="social-sign-in col-md-6 text-center">
      <%= link_to '/auth/google_oauth2', class: "btn-auth btn-google" do %>
        Sign up with Google+
      <% end %>
    </div>

    <div class="social-sign-in col-md-6 text-center">
      <%= link_to '/auth/facebook', class: "btn-auth btn-facebook" do %>
        <i class="fa fa-facebook"></i>
        Sign up with Facebook
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
<br><p class="text-center">-or-</p><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <!-- Email -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_field :username, autofocus: true, class: "form-control form-control-gray", placeholder: "Username" %>
        </div>
      </div>
    </div>

    <!-- Email -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.email_field :email, class: "form-control form-control-gray", placeholder: "Email" %>
        </div>
      </div>
    </div>
    <!-- Password -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-gray", placeholder: "Password #{ @validatable ? '(' + @minimum_password_length.to_s + ' characters minimum)' : ''}" %>
        </div>
      </div>
    </div>
    <!-- Password Confirmation -->
    <div class="form-group">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-gray", placeholder: "Password confirmation" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-6 col-md-offset-3"> 
        <%= f.submit "Sign up", class: "btn btn-primary pull-right" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
<% end %>

